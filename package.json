{
  "name": "appert-shopping",
  "version": "0.0.1",
  "description": "Shopping Cart for Appert",
  "author": "Nicholas Albion",
  "license": "private",
  "private": true,
  "homepage": "https://github.com/nalbion/appert-shopping",
  "repository": {
    "type": "git",
    "url": "https://github.com/nalbion/appert-shopping"
  },
  "bugs": {
    "url": "https://github.com/nalbion/appert-shopping/issues"
  },
  "main": "dist/app.js",
  "pre-commit": [
    "format:lint:fix",
    "coverage",
    "generate-schema",
    "build"
  ],
  "scripts": {
    "start": "node dist/app.js",
    "start:dev": "ts-node src/app.ts",
    "build": "tsc",
    "docker:build": "docker build -t nalbion/appert-shopping .",
    "docker:run": "docker run --rm -p 9020 nalbion/appert-shopping",
    "docker:shell": "docker run --rm -it --entrypoint /bin/bash nalbion/appert-shopping",
    "clean": "rm -rf dist src/generated",
    "coverage": "nyc npm run test",
    "coverage:ci": "nyc npm run test:ci",
    "sonarqube": "node -r dotenv/config ./ci/scripts/sonarqube.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check \"src/**/*.ts*\" --loglevel \"warn\"",
    "format:fix": "prettier --write \"src/**/*.ts*\" --loglevel \"warn\"",
    "format:lint:fix": "npm run format:fix && npm run lint:fix",
    "test": "mocha -r ts-node/register --recursive \"./src/**/*.spec.ts\" --exit",
    "test:tdd": "mocha -r ts-node/register --watch --watch-files \"./src/**/*.ts\" --recursive \"./src/**/*.spec.ts\" ",
    "test:ci": "mocha -r ts-node/register --require mocha-suppress-logs -R mocha-reporter-sonarqube -O filename=test-report.xml --recursive \"./src/**/*.spec.ts\" --exit",
    "generate-clients": "ci/scripts/generate-code",
    "generate-schema": "ts-node src/swagger/generate.ts",
    "generate-md": "ts-node src/swagger/generate-md.ts"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 6.0.0"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@koa/router": "^12.0.0",
    "js-yaml": "^4.1.0",
    "koa": "^2.14.2",
    "koa2-swagger-ui": "^5.7.0",
    "source-map-support": "^0.5.21",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/koa": "^2.13.6",
    "@types/koa__router": "^12.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.27.5",
    "mocha": "^10.2.0",
    "mocha-reporter-sonarqube": "^2.0.0",
    "mocha-suppress-logs": "^0.3.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
