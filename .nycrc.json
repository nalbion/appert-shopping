{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "extension": [
    ".ts",
    ".tsx"
  ],
  "exclude": [
    "src/app.ts",
    "src/api/main.ts",
    "**/*.d.ts",
    "**/*.spec.ts",
    ".build/",
    "ci/scripts/",
    "ci/serverless/",
    "dist/",
    "coverage/",
    "src/test/",
    "src/swagger/",
    "src/generated/"
  ],
  "reporter": [
    "html",
    "text",
    "lcov"
  ],
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}
